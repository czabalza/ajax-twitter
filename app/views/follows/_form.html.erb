
<%#= button_to "", user_follow_url(user), method: :delete %>
<% if user.followers.include?(current_user) %>
  <% followed = "followed" %>
<% else %>
  <% followed = "unfollowed" %>
<% end %>

<a href="javascript:void(0)"
   data-user-id="<%= user.id%>"
   data-initial-follow-state="<%= followed %>"
   class="follow-toggle">button</a>

